<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>To-Do-List</title>
</head>
<body>

    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>
    
    <div class="box">
            <% newItem.forEach(function(item){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" value="<%= item._id %>" name="checkbox" onChange="this.form.submit()">
                        <p><%= item.name %></p>
                        <input type="hidden" name="list" value="<%= kindOfDay %>">
                    </div>
                </form>
            <% }); %>
            
    <form class="item" action="/" method="post">
        <input type="text" name="todo" placeholder="New Item" autocomplete="off">
        <button type="submit" style="padding-bottom: 1px;" name="list" value="<%= kindOfDay %>">+</button>
    </form>
    
    </div>

</body>
</html>